{
	GtkPaned::handle-size         = 1
	
	engine "pixmap"
	{
		image # for the thin gray line separating the sidepane and viewpane
		{
		function	= HANDLE
		recolorable	= TRUE
		file		= "Handles/handle-nautilus.png"
		stretch		= TRUE
		border 		= { 0, 0, 0, 0 }
		}
	}
}



