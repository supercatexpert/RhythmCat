style "murrine-notebook-bg2"
{
	xthickness = 0
	ythickness = 0
	bg[NORMAL]   		= mix (0.1, "#B5B5B5", "#f4f4f4")
	bg[ACTIVE]   		= mix (0.35, "#B5B5B5", "#f4f4f4")
	bg[INSENSITIVE]   	= mix (0.3, "#B5B5B5", "#E4E4E4")

	engine "murrine"
	{		
	contrast = 1.5
	gradient_shades = {1.1,1.06,0.92,0.85} # { 1.1, 1.02, 0.97, 0.93 }
	lightborder_shade = 1.5
	}
}

