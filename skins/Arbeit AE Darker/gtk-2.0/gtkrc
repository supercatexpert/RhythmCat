# button
style "theme-button" = "theme-wider"
{
    	bg[NORMAL]   		= shade (0.90, @bg_color)
    	bg[ACTIVE]   		= shade (0.82, @bg_color)
    	bg[PRELIGHT] 		= shade (1.05, @bg_color)

  	engine "equinox" 
  	{
	curvature 	= 2.5
	arrowsize       = 0.1 # controls combo_arrow circle size.  Diameter set by (11 + 2 * arrowsize)
  	}
}

